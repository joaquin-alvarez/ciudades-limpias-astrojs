<style>
  .projects-section {
    padding: 80px 0;
    background-color: var(--color-light-bg);
  }
  
  .search-container {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 15px;
    margin-bottom: 30px;
  }
  
  .search-box {
    display: flex;
    position: relative;
    width: 300px;
    max-width: 100%;
  }
  
  .search-box input {
    width: 100%;
    padding: 12px 45px 12px 15px;
    border: 2px solid var(--color-primary);
    border-radius: 50px;
    font-size: 1rem;
    outline: none;
  }
  
  .search-btn {
    position: absolute;
    right: 5px;
    top: 50%;
    transform: translateY(-50%);
    background: var(--color-primary);
    border: none;
    width: 35px;
    height: 35px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
  }
  
  .search-btn svg {
    width: 18px;
    height: 18px;
    color: white;
  }
  
  .category-filter input {
    background-color: #eef9f4;
    font-weight: bold;
    color: var(--color-primary);
  }
  
  .filter-tags {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 10px;
    margin-bottom: 40px;
  }
  
  .filter-tag {
    background-color: white;
    color: var(--color-primary);
    border: 1px solid var(--color-primary);
    padding: 8px 15px;
    border-radius: 4px;
    cursor: pointer;
    font-weight: 500;
    transition: all 0.3s;
  }
  
  .filter-tag.active {
    background-color: var(--color-primary);
    color: white;
  }
  
  .projects-display {
    background-color: white;
    border-radius: 10px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }
  
  .project-details {
    display: flex;
    align-items: stretch;
  }
  
  .project-image {
    flex: 1;
    max-width: 50%;
  }
  
  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  
  .project-info {
    flex: 1;
    padding: 30px;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  
  .school-name {
    color: var(--color-primary);
    font-size: 1.8rem;
    margin-bottom: 10px;
    font-weight: 700;
  }
  
  .project-name {
    font-size: 1.3rem;
    font-style: italic;
    margin-bottom: 10px;
    font-weight: 500;
  }
  
  .project-category {
    color: #666;
    margin-bottom: 20px;
  }
  
  .social-links {
    display: flex;
    gap: 15px;
    margin-top: 20px;
  }
  
  .social-link {
    width: 45px;
    height: 45px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s;
  }
  
  .social-link:hover {
    transform: translateY(-3px);
  }
  
  .social-link svg {
    width: 24px;
    height: 24px;
  }
  
  .facebook {
    background-color: #1877f2;
    color: white;
  }
  
  .instagram {
    background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
    color: white;
  }
  
  .youtube {
    background-color: #ff0000;
    color: white;
  }
  
  .tiktok {
    background-color: #000000;
    color: white;
  }
  
  @media (max-width: 992px) {
    .project-details {
      flex-direction: column;
    }
    
    .project-image {
      max-width: 100%;
      height: 300px;
    }
  }
</style>
